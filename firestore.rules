rules_version = '2';
service cloud.firestore {
  function isSignedIn() {
    return request.auth != null;
  }

  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write: if false;
    }

    match /{itemType}/{id} {
      allow read: if (isSignedIn() && get(/databases/$(database)/documents/$(itemType)/$(id)).data.public == true) || 
          get(/databases/$(database)/documents/$(itemType)/$(id)/_rosters/readers).data.list.keys().hasAny(
              get(/databases/$(database)/documents/profiles/$(request.auth.token.profile)/_rosters/memberships).data.up.indirect.keys()
          ) == true
    }

    match /site/{anything} {
      allow read: if true;
      allow write: if false;
    }
  }
}